<!--index.wxml-->
<view class="containers">
	<view class="userinfo">
		<image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
		<view class="user-bg"></view>
	</view>
	<!-- add card -->
	<view class="add-card" bindtap='addCard' wx:if="{{myCardList.length > 0}}">
		<text class="">+<text class="add-card-tips">新建打卡</text></text>
	</view>
	<view class="add-card add-card2" bindtap='addCard' wx:else>
		<text class="">+ <text class="add-card-tips">新建打卡</text> </text>
	</view>
	<view class="my-card-list">
		<view wx:for="{{myCardList}}" wx:key="{{index}}" bindtap="bindViewCard" data-id="{{item.id}}">
			<view class="my-card-item">
				<image class="card-item-img" src="{{item.activityDetail.activityThumb}}"></image>
				<view class="card-item-info">
					<view class="card-item-title">
						<text>{{item.name}}</text>
						<text class="isMine" wx:if="{{item.main}}">群主</text>
					</view>
					<view class="card-item-tips">
						<!-- <text class="zan-icon zan-icon-discount"></text> -->
						<!-- <text class="tips-item">{{item.createTime}}</text> -->
						<text class="zan-icon zan-icon-contact"></text>
						<text class="tips-item">{{item.cardClickNumber}}已打卡</text>
					</view>

					<view class="has-card" wx:if="{{!item.hasCard}}"> 打卡 </view>
					<view class="has-card has-no-card" wx:else> 已打卡 </view>
				</view>
			</view>
		</view>
	</view>
	<view class="underline"></view>
	<!-- recommand -->
	<view class="recommand-group">
		<block wx:for="{{recommand}}" wx:key="idx">
			<view class="recommand-item">
				<view class="item-top-info">
					<image class="pic-img" src="{{item.headicon}}"></image>
					<view class="item-title-info">
						<view class="item-title">
							<text>{{item.nickname}}</text>
						</view>
						<view class="item-time-tips">
							<text class="">{{item.time}}</text>
							<text class="">·</text>
							<text class="">已经坚持{{item.days}}天</text>
						</view>
					</view>
				</view>
				<view class="item-remark">{{item.remark}}</view>
				<view class="item-pic">
					<image src="{{item.item_pic}}"></image>
				</view>
				<view class="item-desc">
					<image src="{{item.card_pic}}"></image>
					<view class="item-card-info">
						<text class="item-card-title">{{item.card_title}}</text>
						<view class="item-member-num">
							<text class="">{{item.card_num}}人已经参加</text>
						</view>
						<text class="item-arrow">></text>
					</view>
				</view>
        <!-- tools-bar -->
        <view class="tool-bar">
        	<text>详情</text>
        	<text>评论</text>
        	<text>赞</text>
        </view>
			</view>
			<view class="underline"></view>
		</block>
	</view>
</view>
