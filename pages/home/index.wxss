/**index.wxss**/

.containers {
	/*padding: 0 20rpx;*/
}

.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
	position: relative;
}

.userinfo-avatar {
	width: 128rpx;
	height: 128rpx;
	margin: 20rpx;
	border-radius: 50%;
	border: 4rpx solid #fff;
}

.userinfo-nickname {
	color: #aaa;
}

.usermotto {
	margin-top: 200px;
}

.add-card {
	text-align: left;
	padding: 20rpx;
	font-size: 32rpx;
	color: #1dafaa;
}

.add-card .add-card-tips {
	padding-left: 15rpx;
}

.my-card-list {
	padding: 0 20rpx 10rpx 20rpx;
}

.my-card-list .my-card-item {
	padding: 20rpx 0 10rpx 20rpx;
	border: 1px solid #f0f0f0;
	box-shadow: 0 0 4rpx 1rpx rgba(200, 200, 200, 0.5);
	margin-bottom: 15rpx;
	position: relative;
}

.my-card-item .card-item-img {
	width: 100rpx;
	height: 100rpx;
	display: inline-block;
}

.my-card-item .card-item-info {
	position: relative;
	display: inline-block;
	vertical-align: top;
	width: calc(100% - 120rpx);
	height: 100rpx;
	margin-left: 20rpx;
}

.card-item-info .card-item-title {
	font-size: 32rpx;
	color: #333;
}

.card-item-title .isMine {
	display: inline-block;
	padding: 4rpx 10rpx;
	color: #fff;
	font-size: 24rpx;
	border-radius: 5rpx;
	background-color: #f90;
	margin-left: 8rpx;
}

.my-card-item .card-item-tips {
	position: absolute;
	bottom: 0;
	left: 0;
	display: inline-flex;
	width: 100%;
	align-items: center;
	font-size: 26rpx;
	color: #888;
	vertical-align: bottom;
}

.my-card-item .card-item-tips text {
	padding-right: 10rpx;
}

.my-card-item .card-item-tips .tips-item {
	padding-right: 20rpx;
}

.user-bg {
	background-color: #1dafaa;
	width: 100%;
	height: 60%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
	border-bottom-left-radius: 50%;
	border-bottom-right-radius: 50%;
}

.add-card2 {
	text-align: center;
	padding: 30rpx;
	border: 1px solid #ddd;
	width: calc(100% - 60rpx);
	margin: 30rpx auto;
	box-sizing: border-box;
	box-shadow: 0 0 4rpx 1rpx rgba(200, 200, 200, 0.5);
	border-radius: 8rpx;
}

.has-card {
	font-size: 26rpx;
	color: #fff;
	padding: 8rpx 0;
	background-color: #1dafaa;
	border-radius: 8rpx;
	width: 100rpx;
	text-align: center;
	display: inline-block;
	position: absolute;
	right: 30rpx;
	top: 25rpx;
}

.has-no-card {
	background-color: #999;
}

.recommand-item{
	border-top: 16rpx solid #f8f8f8;
}