.container{
  background: #fff;
  padding: 20rpx;
}
.zan-panel{
  width: 100%;
}
.zan-col {
  line-height: 60rpx;
  text-align: center;
  background-color: #39a9ed;
  font-size: 28rpx;
  color: #fff;
}

.zan-col:nth-child(even) {
  background-color: #66c6f2;
}
.zan-cell--last-child{
  margin: 10rpx 0;
  padding: 0rpx 10rpx;
  font-size: 24rpx;
  border: 4rpx solid #fb4a0a;
  background-color: #fff7f4;
  display: inline-block;
}
.zan-card{
  padding: 26rpx 0;
}
.zan-card__thumb{
  width: 298rpx;
  height: 200rpx;
}
.zan-card__img{
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.zan-card__detail{
  margin-left: 320rpx;
}
.card-accout{
  border-right: 2rpx solid #666;
  line-height: 32rpx;
  padding-right: 20rpx;
  margin-right:20rpx; 
}