.container {
  background: #fff;
  padding: 20rpx;
}

.zan-panel {
  width: 100%;
}

.zan-col {
  line-height: 60rpx;
  text-align: center;
  background-color: #39a9ed;
  font-size: 28rpx;
  color: #fff;
}

.zan-col:nth-child(even) {
  background-color: #66c6f2;
}

.zan-cell--last-child {
  margin: 10rpx 0;
  padding: 0rpx 10rpx;
  font-size: 24rpx;
  border: 3rpx solid #fb4a0a;
  background-color: #fff7f4;
  display: inline-block;
  max-width: 100%;
  box-sizing: border-box;
}

.zan-card {
  padding: 26rpx 0;
}

.zan-card__thumb {
  width: 298rpx;
  height: 200rpx;
}

.zan-card__img {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.zan-card__detail {
  margin-left: 320rpx;
}

.card-accout {
  border-right: 2rpx solid #666;
  line-height: 32rpx;
  padding-right: 20rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
}

.classify-item, .classify-item:nth-child(even) {
  width: 23%;
  background-color: transparent;
  border: 2rpx solid #ccc;
  border-radius: 3px;
  margin-right: 2.66667%;
  margin-bottom: 10rpx;
  color: #999;
}

.classify-item.active {
  color: #519FFF;
  border-color: #519FFF;
}

.classify-item:nth-child(4n) {
  margin-right: 0;
}

.zan-card__detail {
  min-height: 200rpx;
}

.c-footer {
  position: absolute;
  bottom: 0;
  line-height: 28rpx;
  margin-bottom: 0;
}

.no-data {
  font-size: 32rpx;
  text-align: center;
  color: #666;
  margin: 50rpx 0;
}

.fz12 {
  font-size: 24rpx;
}

.zan-card {
  border-bottom: 2rpx solid #dfdfdf;
}

.zan-panel::after {
  opacity: 0;
}

.card-list {
  width: 100%;
  border-top: 2rpx solid #dfdfdf;
}
