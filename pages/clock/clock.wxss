/* pages/clock/clock.wxss */
.pad{padding: 0 30rpx}
.contant{padding-top:40rpx;padding-bottom: 40rpx;width: 100%;min-height: 200rpx;border-bottom: 1rpx #eeeeee solid }

.cont_btn{margin-top: 20rpx}
.cont_btn view{margin-right: 10rpx;width: 120rpx;height: 120rpx; border:solid 1rpx #eeeeee;}
.cont_btn view image{width: 80rpx;height: 80rpx;margin-top:20rpx;margin-left: 20rpx; }

.cont_nav{height: 80rpx;line-height: 80rpx}
.cont_b{margin-right: 30rpx}

.contmess{margin-top: 30rpx;border-radius: 10rpx;padding: 30rpx 24rpx;background: #ffffff;position: relative}
.line{width: 100%;height: 2rpx;background:#1dafaa;margin:24rpx 0 44rpx 0 }
.mess{line-height: 50rpx;width: 160rpx;position: absolute;top: 31rpx;left: 50%;margin-left: -80rpx;background: #ffffff;text-align: center;font-size: 22rpx;color: #999}
.mess:before,.mess:after{width: 6rpx;height: 6rpx;top:50%;transform: translate3d(0,-50%,0) rotate(45deg);content:'';background:#1dafaa;position: absolute;}
.mess:after{right:6rpx;}
.mess:before{left:6rpx;}


.cant_foot{position: fixed;height: 100rpx;width: 100%;background: #1dafaa;bottom: 0;left: 0;color: #ffffff;line-height: 100rpx;text-align: center}

