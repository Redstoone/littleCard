/* pages/clock/clock.wxss */

.pad {
  padding: 0 30rpx
}

.contant {
  width: 100%;
  height: 300rpx;
  border-bottom: 1rpx #eeeeee solid
}

.cont_btn {
  margin-top: 20rpx
}

.cont_btn view {
  margin-right: 10rpx;
}

.cont_btn view image {
  width: 120rpx;
  height: 120rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.cont_nav {
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
}

.cont_b {
  margin-right: 20rpx
}

.contmess {
  margin-top: 30rpx;
  border-radius: 10rpx;
  padding: 30rpx 24rpx;
  background: #ffffff;
  position: relative
}

.line {
  width: 100%;
  height: 2rpx;
  background: #519FFF;
  margin: 24rpx 0 44rpx 0
}

.mess {
  line-height: 50rpx;
  width: 160rpx;
  position: absolute;
  top: 31rpx;
  left: 50%;
  margin-left: -80rpx;
  background: #ffffff;
  text-align: center;
  font-size: 22rpx;
  color: #999
}

.mess:before, .mess:after {
  width: 6rpx;
  height: 6rpx;
  top: 50%;
  transform: translate3d(0, -50%, 0) rotate(45deg);
  content: '';
  background: #519FFF;
  position: absolute;
}

.mess:after {
  right: 6rpx;
}

.mess:before {
  left: 6rpx;
}

.cant_foot {
  position: fixed;
  height: 100rpx;
  width: 100%;
  background: #519FFF;
  bottom: 0;
  left: 0;
  color: #ffffff;
  line-height: 100rpx;
  text-align: center
}

.col {
  width: 30%;
  background: #999999
}

.com {
  width: 70%
}

.thecont {
  margin-top: 30rpx;
  padding: 0 30rpx;
  position: relative;
}

.previewImgs {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx
}

.previewImg {
  width: 140rpx;
  height: 140rpx;
}

.upload {
  flex-wrap: wrap;
  display: flex
}

.upload_input {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx solid #C9C9C9;
  border-radius: 4px;
  position: relative;
}

.shanchuimg {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #7A8189;
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
  top: -10rpx;
  right: -10rpx;
  position: absolute;
  text-align: center;
  font-size: 22rpx;
  color: #fff
}

.line {
  top: 44rpx;
  left: 27rpx;
  background: #D8D8D8;
  border-radius: 4px;
  -moz-border-radius: 4rpx;
  -webkit-border-radius: 4rpx;
  width: 86rpx;
  height: 4rpx;
  position: absolute
}

.lines {
  top: 27rpx;
  left: 66rpx;
  background: #D8D8D8;
  border-radius: 4px;
  -moz-border-radius: 4rpx;
  -webkit-border-radius: 4rpx;
  width: 4rpx;
  height: 86rpx;
  position: absolute
}

.clockVideo {
  width: 400rpx;
  height: 200rpx;
}

.radio-group {
  line-height: 60rpx;
  padding: 40rpx;
}

.radio-group label {
  margin-bottom: 20rpx
}

.asdo {
  width: 40rpx;
  height: 40rpx;
  border: solid 1rpx #f1f1f1;
  position: relative;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 10rpx
}

.asdi {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: #519FFF;
  left: 50%;
  margin-left: -10rpx;
  top: 50%;
  margin-top: -10rpx;
  border-radius: 50%;
}

.group {
  width: 500rpx;
  height: 300rpx;
  background: #fff;
  position: fixed;
  z-index: 10;
  left: 50%;
  margin-left: -250rpx;
  top: 50%;
  margin-top: -150rpx;
  border-radius: 20rpx;
}

.g_btn {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  color: #519FFF
}

.back {
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 9
}

.arrow-right {
  padding-right: 30rpx;
  position: relative;
  min-height: 42rpx;
}

.arrow-right:after {
  content: '';
  width: 14rpx;
  height: 14rpx;
  border: 2rpx solid #999;
  border-left: none;
  border-bottom: none;
  transform: rotate(45deg);
  position: absolute;
  right: 6rpx;
  top: calc(50% - 7rpx);
}

.card-contant {
  padding: 30rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
}

.remove-video {
  font-size: 24rpx;
  color: #ff0000;
  position: absolute;
  right: 100rpx;
  top: 90rpx;
}

.view-video {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .5);
  z-index: 1000000;
}

.clockVideo {
  width: 100%;
  height: 400rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.icon-close-wrap {
  position: absolute;
  right: 60rpx;
  top: 60rpx;
  z-index: 999;
}

.icon-close {
  color: #fff;
  border: 2rpx solid #fff;
  border-radius: 50%;
  padding: 10rpx;
}

.video-ui .icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  margin: auto;
}