/* pages/newCard/newCard.wxss */
page{background: #ffffff;}
.contant{padding: 0 30rpx;padding-bottom: 40rpx}
.cont_title{line-height: 100rpx;}
.cont_input{width: 100%;border: solid 1rpx #C9C9C9;line-height: 80rpx;border-radius: 8rpx}
.cont_input input{width: 98%;height: 80rpx;padding-left: 10rpx;}
.backg{width: 100%;height: 20rpx;background: #f8f8f8}

.radio-group{line-height: 60rpx}
.radio-group label{margin-bottom: 20rpx}
.asdo{width: 40rpx;height: 40rpx;border: solid 1rpx #f1f1f1;position: relative;border-radius: 50%;margin-right: 20rpx;margin-top: 10rpx}
.asdi{position: absolute;width: 20rpx;height: 20rpx;background: #1dafaa;left: 50%;margin-left: -10rpx;top: 50%;margin-top: -10rpx;border-radius:50%; }

.setTime{line-height: 60rpx;padding-top: 40rpx;padding-left: 40rpx}
.setTime picker{margin-left: 20rpx;width: 250rpx;position: relative}
.picker{width: 250rpx;height: 60rpx;border: solid 1rpx #f1f1f1;padding-left: 6rpx}
.pickerImg{position: absolute;width: 40rpx;height: 40rpx;right: 2rpx;top: 10rpx}

.nextbtn{position: absolute;left: 50%;bottom: 60rpx;background: #1dafaa;width: 400rpx;margin-left: -200rpx;}