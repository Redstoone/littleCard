.container {
  height: 100%;
}

.contant {
  width: 100%;
  height: calc(100% - 100rpx);
  box-sizing: border-box;
}

.comment-desc {
  padding: 30rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.cant_foot {
  position: fixed;
  height: 100rpx;
  width: 100%;
  background: #1dafaa;
  bottom: 0;
  left: 0;
  color: #ffffff;
  line-height: 100rpx;
  text-align: center
}

.col {
  width: 30%;
  background: #999999
}

